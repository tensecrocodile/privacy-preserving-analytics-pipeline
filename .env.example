# Database Configuration
DATABASE_URL=postgresql://privacy_user:password@localhost:5432/privacy_analytics_db

# Redis Configuration
REDIS_URL=redis://localhost:6379/0

# Application Settings
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=INFO

# Security & Privacy
SECRET_KEY=your-secret-key-change-in-production
TOKENIZATION_KEY=your-tokenization-key-32-chars-long!!
ADMIN_ONLY_DECRYPTION=true
ENCRYPT_PII=true

# Differential Privacy
DIFFERENTIAL_PRIVACY_EPSILON=1.0
DIFFERENTIAL_PRIVACY_DELTA=0.01
ADAPTIVE_BUDGET=true
BUDGET_RESET_INTERVAL_HOURS=24

# JWT & Auth
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24
ACCESS_TOKEN_EXPIRE_MINUTES=30

# CORS Settings
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8080

# Audit Logging
AUDIT_LOG_RETENTION_DAYS=2555
IMMUTABLE_LOGS=true
LOG_ALL_QUERIES=true

# Email (Optional)
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password

# Monitoring
PROMETHEUS_ENABLED=true
GRAFANA_ADMIN_PASSWORD=admin

# Feature Flags
ENABLE_FEDERATED_LEARNING=false
ENABLE_SYNTHETIC_DATA_GENERATION=false
ENABLE_HOMOMORPHIC_ENCRYPTION=false
